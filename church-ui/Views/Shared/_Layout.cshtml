<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Prayer Cards</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <style>
        /* Custom navbar color */
        .navbar {
            background-color: #D9D9D9; 
        }

        .navbar-brand {
            color: #006699 !important;  
        }

        .navbar-nav .nav-link {
            color: #006699 !important;
        }

        .navbar-nav .nav-link:hover {
            color: #3498db !important;  
        }

        footer {
            background-color: #D9D9D9;  
        }

        footer a {
            color: #3498db;  
        }

        footer a:hover {
            color: #ecf0f1;  
        }
    </style>
    
</head>
<body>
    <header>

        <nav class="navbar navbar-expand-sm navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand text-black" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo_colourful.png" alt="Church Logo" style="height: 40px; width: auto; margin-right: 10px;">
                    Home
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="PrayerCardExcel" asp-action="Index">PrayerCards</a>
                        </li>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("AdminsUI"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="UploadCards" asp-action="ListImages">Manage Prayer Cards</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
        <!-- Announcement Banner -->
        <div class="container mt-3">
            <div class="alert alert-warning alert-dismissible fade show text-dark" role="alert">
                <strong>⚠️ Notice:</strong> Prayer Cards for Friday the 14th of February are ready.
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container d-flex justify-content-between">
            <span>&copy; 2025 - Church - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></span>

            @if (Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "Development")
            {
                <span class="text-danger">ENV: DEVELOPMENT</span>
            }
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
