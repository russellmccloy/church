@model List<string> 

<h2 class="text-center mt-4">Prayer Cards</h2>

<div class="container mt-3">
    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var imageName in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-header text-center">
                            <h5 class="card-title">Image: @imageName</h5>
                        </div>
                        <div class="card-body">
                            <!-- Display the image by generating the URL for the blob -->
                            <img src="https://church2.blob.core.windows.net/images/@imageName" alt="Image" class="img-fluid" />
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>No images found for this Adult.</p>
    }
</div>

<style>
    .card {
        transition: all 0.3s ease-in-out;
    }

    .card:hover {
        transform: translateY(-5px); /* Slight upward movement on hover */
        box-shadow: 0 12px 20px rgba(0, 0, 0, 0.1); /* Enhanced shadow effect */
    }

    .card-header {
        padding: 1.2rem; /* Adds padding inside the card header */
        border-bottom: 2px solid #f1f1f1; /* Adds a subtle border under the header */
        background-color: #A0B5A3 !important;
    }

    .card-title {
        font-size: 1.25rem; /* Larger font for the title */
        font-weight: bold; /* Bold title */
    }

    .card-subtitle {
        font-size: 1rem; /* Font size for the youth info */
    }

    .card-body {
        padding: 1.25rem; /* Adds more padding inside the card body */
    }

    .hover-shadow:hover {
        box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
    }

    .text-muted {
        color: #A0B5A3 !important; /* Subtle muted color */
    }
    
    .card-title {
        font-size: 1.1rem; /* Slightly smaller title font on smaller screens */
    }
    
</style>